<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="controlmassage" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane>
         <content>
            <TextArea fx:id="chatArea" editable="false" prefHeight="306.0" prefWidth="600.0" wrapText="true" />
         </content>
      </ScrollPane>
      <HBox prefHeight="51.0" prefWidth="600.0" spacing="10.0">
         <children>
            <TextField fx:id="inputfield" prefHeight="25.0" prefWidth="491.0" promptText="Enter massage..." />
            <Button fx:id="sendButton" mnemonicParsing="false" text="Send" />
            <Button fx:id="ClearButton" mnemonicParsing="false" onAction="#onClearClicked" text="Clear" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="10.0" />
   </padding>
</VBox>
